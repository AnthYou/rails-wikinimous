<div class="container">
  <div class="col-xs-6">
    <%= simple_form_for(@article) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
        <%= f.button :submit, class: 'btn-primary' %>
    <% end %>
  </div>
</div>

