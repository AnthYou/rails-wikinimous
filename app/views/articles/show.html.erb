<div class="container">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <%= link_to 'Edit this article', edit_article_path, class: 'btn btn-primary' %>
  <%= link_to 'Delete this article', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
  <%= link_to 'Back to the list', articles_path, class: 'btn btn-secondary' %>
</div>

